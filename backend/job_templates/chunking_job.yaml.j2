apiVersion: batch/v1
kind: Job
metadata:
  name: chunking-doc-{{ document_id }}
  namespace: corpus
  labels:
    app: agent
    agent-type: chunking
spec:
  ttlSecondsAfterFinished: 300  # Cleanup 5 minutes after completion
  backoffLimit: 0  # Don't retry on failure
  template:
    metadata:
      labels:
        app: agent
        agent-type: chunking
    spec:
      runtimeClassName: gvisor
      serviceAccountName: corpus-service-account
      restartPolicy: Never
      tolerations:
        - key: workload
          operator: Equal
          value: workflow-agent
          effect: NoSchedule
        - key: sandbox.gke.io/runtime
          operator: Equal
          value: gvisor
          effect: NoSchedule
      nodeSelector:
        workload: agent-execution
      containers:
        - name: chunker
          image: us-central1-docker.pkg.dev/corpus-prod/corpus/document-chunker:{{ image_tag | default('latest') }}
          imagePullPolicy: IfNotPresent
          resources:
            requests:
              memory: "512Mi"
              cpu: "500m"
            limits:
              memory: "1Gi"
              cpu: "1000m"
          env:
            {% for env_var in env_vars %}
            - name: {{ env_var.name }}
              value: "{{ env_var.value }}"
            {% endfor %}
            {% if execution_mode == 'k8s' %}
            - name: ANTHROPIC_API_KEY
              valueFrom:
                secretKeyRef:
                  name: agent-env
                  key: ANTHROPIC_API_KEY
            {% endif %}
